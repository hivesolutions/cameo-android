<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="GreyTheme"
        parent="@style/Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/GreyActionBar</item>
        <item name="actionOverflowButtonStyle">@style/GreyActionBar.ButtonOverflow</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item tools:targetApi="11" name="android:actionBarStyle">@style/GreyActionBar</item>
        <item tools:targetApi="11" name="android:actionOverflowButtonStyle">@style/GreyActionBar.ButtonOverflow</item>
        <item tools:targetApi="11" name="android:actionMenuTextColor">@color/white</item>
    </style>
    <style name="OverlayTheme"
           parent="@style/Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/OverlayActionBar</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item tools:targetApi="11" name="android:actionBarStyle">@style/OverlayActionBar</item>
        <item tools:targetApi="11" name="android:windowActionBarOverlay">true</item>
        <item tools:targetApi="11" name="android:actionMenuTextColor">@color/white</item>
    </style>
    <style name="GreyActionBar"
           parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/grey</item>
        <item name="titleTextStyle">@style/GreyActionBar.TextStyle</item>
        <item name="android:background">@color/grey</item>
        <item tools:targetApi="11" name="android:titleTextStyle">@style/GreyActionBar.TextStyle</item>
    </style>
    <style name="GreyActionBar.TextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="GreyActionBar.ButtonOverflow" parent="@style/Widget.AppCompat.Light.Base.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_core_overflow_white</item>
    </style>
    <style name="OverlayActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/black_transparent</item>
        <item name="android:background">@color/black_transparent</item>
    </style>
</resources>
